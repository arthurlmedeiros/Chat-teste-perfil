<body>
  <div class="container">
    <h2>Teste de Perfil Comportamental ðŸ§ </h2>
    <div class="chat" id="chatBox"></div>
    <input type="text" id="userInput" placeholder="Digite sua mensagem..." />
    <button onclick="sendMessage()">Enviar</button>
  </div>

  <script>
    const webhookUrl = "https://seu-n8n-webhook-url.webhook/endpoint"; // substitua pela sua URL
    let conversationState = {
      userId: "user-001",
      status: "awaiting_name",
      userName: null,
      currentQuestionIndex: -1,
      userAnswers: {}
    };

    function appendMessage(sender, text) {
      const chat = document.getElementById("chatBox");
      const msg = document.createElement("p");
      msg.className = sender;
      msg.innerText = text;
      chat.appendChild(msg);
      chat.scrollTop = chat.scrollHeight;
    }

    async function sendMessage() {
      const input = document.getElementById("userInput");
      const message = input.value.trim();
      if (!message) return;

      appendMessage("user", message);
      input.value = "";

      const payload = {
        ...conversationState,
        lastUserMessage: message
      };

      try {
        const res = await fetch(webhookUrl, {
          method: "POST",
          headers: {
            "Content-Type": "application/json"
          },
          body: JSON.stringify(payload)
        });
        const data = await res.json();

        if (data.response) {
          appendMessage("bot", data.response);
        }

        if (data.nextState) {
          conversationState = data.nextState;
        }
      } catch (err) {
        appendMessage("bot", "Erro ao enviar a mensagem. Tente novamente mais tarde.");
      }
    }
  </script>
</body>
